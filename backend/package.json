{
  "name": "service-business-management-backend",
  "version": "1.0.0",
  "description": "Backend for Service Business Management Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "pm2 start server.js --name \"vms-backend\" --watch",
    "pm2:stop": "pm2 stop vms-backend",
    "pm2:restart": "pm2 restart vms-backend",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "cleanup:test-data": "node scripts/cleanup-test-payments.js",
    "cleanup:frontend-mocks": "node scripts/remove-frontend-mock-data.js",
    "cleanup:production": "node scripts/production-cleanup.js",
    "cleanup:all-payments": "node scripts/delete-all-payments.js",
    "cleanup:all-payments-direct": "node scripts/delete-all-payments-direct.js",
    "verify:frontend-api": "node scripts/verify-frontend-api.js",
    "verify:production-ready": "node scripts/final-production-check.js",
    "cleanup:all": "npm run cleanup:test-data && npm run cleanup:frontend-mocks"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
